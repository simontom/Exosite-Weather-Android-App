                        android:background="@color/appBlue2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="22sp"
                        android:layout_margin="0dp"
                        android:layout_weight="0.50"
